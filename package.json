{
  "name": "beautiful-docx",
  "version": "1.0.4",
  "description": "Easily generate .docx files with HTML and CSS.",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    "types": "./lib/cjs/types/index.d.ts",
    "default": "./lib/cjs/index.js"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:cjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "jest",
    "lint": "eslint --quiet --cache --fix",
    "format": "prettier --write",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "example": "ts-node ./example/example.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flexumio/beautiful-docx.git"
  },
  "keywords": [
    "html",
    "docx",
    "office",
    "word",
    "generate",
    "creator",
    "create",
    "document",
    "doc",
    "typescript"
  ],
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "colortranslator": "^1.9.2",
    "deepmerge": "^4.2.2",
    "docx": "^7.8.2",
    "himalaya": "^1.1.0",
    "image-size": "^1.0.1",
    "jest": "^28.1.2",
    "ts-deepmerge": "^2.0.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint",
      "jest ./src/** --collect-coverage"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "npm run format"
    ]
  }
}
